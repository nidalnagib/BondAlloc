{
    "high_yield": {
        "name": "High Yield Universe",
        "description": "Exclude investment grade bonds",
        "filters": {
            "rating": {
                "type": "categorical_exclude",
                "values": [
                    "AAA",
                    "AA+",
                    "AA",
                    "AA-",
                    "A+",
                    "A",
                    "A-",
                    "BBB+",
                    "BBB",
                    "BBB-"
                ]
            }
        }
    },
    "investment_grade": {
        "name": "Investment Grade Universe",
        "description": "Exclude high yield bonds",
        "filters": {
            "rating": {
                "type": "categorical_exclude",
                "values": [
                    "BB+",
                    "BB",
                    "BB-",
                    "B+",
                    "B",
                    "B-",
                    "CCC+",
                    "CCC",
                    "CCC-",
                    "CC",
                    "C",
                    "D"
                ]
            }
        }
    },
    "short_duration": {
        "name": "Short Duration",
        "description": "Bonds with duration under 3 years",
        "filters": {
            "duration": {
                "type": "range",
                "max": 3.0
            }
        }
    },
    "medium_duration": {
        "name": "Medium Duration",
        "description": "Bonds with duration between 3 and 7 years",
        "filters": {
            "duration": {
                "type": "range",
                "min": 3.0,
                "max": 7.0
            }
        }
    },
    "exclude_subordinated": {
        "name": "Senior Only",
        "description": "Exclude all subordinated bonds",
        "filters": {
            "payment_rank": {
                "type": "categorical_exclude",
                "values": [
                    "Subordinated",
                    "Junior Subordinated"
                ]
            }
        }
    }
}